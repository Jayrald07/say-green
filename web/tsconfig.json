{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "Node16",
    "rootDir": ".",
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
